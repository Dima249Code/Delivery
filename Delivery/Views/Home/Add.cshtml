@model Delivery.Data.Models.Delivery



<h4>Добавить доставку</h4>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" action="" method="post">
            <div asp-validation-summary="ModelOnly"  class="text-danger"></div>
            <div class="form-group">

                <label asp-for="SenderCity" class="control-label">Город отправителя:</label><br />
                <input asp-for="SenderCity" class="form-control" />
                <span asp-validation-for="SenderCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenderAddress" class="control-label">Адрес отправителя:</label><br />
                <input asp-for="SenderAddress" class="form-control" />
                <span asp-validation-for="SenderAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReciverCity" class="control-label">Город получателя:</label><br />
                <input asp-for="ReciverCity" class="form-control" />
                <span asp-validation-for="ReciverCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReciverAdress" class="control-label">Адрес получателя:</label><br />
                <input asp-for="ReciverAdress" class="form-control" />
                <span asp-validation-for="ReciverAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="weight" class="control-label">Вес отправления:</label><br />
                <input asp-for="weight" class="form-control" />
                <span asp-validation-for="weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата отправления:</label><br />
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>